---
layout: layouts/standard.njk
pagination:
    data: collections.gallery
    size: 1
    alias: image
    resolve: values
    before: (data) => data.filter((item) => !item.easel)

permalink: "artwork/{{ image.name | slug }}/"
---
<article class="artpage-wrapper">
<figure class="artpage">
<img src="/images/gallery/{{image.name | slug }}.jpg" class="artpage__image {% if descriptions[image.name].wide %} artpage__image--wide {% endif %}" />
<figcaption>
<h2>{{ descriptions[image.name].title }}</h2>
<em>{{ descriptions[image.name].format }}</em>
<p>{{ descriptions[image.name].description }}</p>
</figcaption>
</figure>
<div class="artpage__links">
{% if pagination.previousPageLink %}<a href="{{pagination.previousPageLink}}">&#8592; Previous</a>{% else %}<a href="{{pagination.href.last}}">&#8592; Previous</a>{% endif %}{% if pagination.nextPageLink %}<a href="{{pagination.nextPageLink}}">Next &#8594;</a>{% else %}<a href="{{pagination.href.first}}">Next &#8594;</a>{% endif %}
</div>
</article>

